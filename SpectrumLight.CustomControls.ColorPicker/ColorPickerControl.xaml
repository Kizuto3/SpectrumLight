<UserControl x:Class="SpectrumLight.CustomControls.ColorPicker.ColorPickerCotrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpectrumLight.CustomControls.ColorPicker"
             xmlns:ext="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ext:ColorPicker SelectedColor="{Binding Color, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:ColorPickerCotrol}}}"
                         UsingAlphaChannel="False" ShowStandardColors="False"
                         ToolTip="Pick a color for hexagons"/>
    </Grid>
</UserControl>
