<UserControl x:Class="SpectrumLight.CustomControls.ConnectionsBar.ConnectionsBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpectrumLight.CustomControls.ConnectionsBar"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="../Style/ConnectionsBarImages.xaml"/>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Right">
        
        <Image Grid.Column="1" 
               Source="{StaticResource BluetoothImage}" 
               ToolTip="{Binding ConnectionName, UpdateSourceTrigger=PropertyChanged}" 
               Margin="5"/>

    </Grid>
</UserControl>
